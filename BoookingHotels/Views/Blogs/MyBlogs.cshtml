@model IEnumerable<BoookingHotels.Models.Blog>

@{
    ViewData["Title"] = "Blog của tôi";
}

<style>
    .blog-card {
        border: none;
        border-radius: 1rem;
        box-shadow: 0 4px 16px rgba(0,0,0,0.08);
        transition: transform 0.2s, box-shadow 0.2s;
        overflow: hidden;
    }

    .blog-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 24px rgba(0,0,0,0.12);
    }

    .blog-thumbnail {
        width: 100%;
        height: 200px;
        object-fit: cover;
    }

    .blog-title {
        font-size: 1.2rem;
        font-weight: 700;
        color: #003580;
        margin-bottom: 0.5rem;
    }

    .blog-meta {
        font-size: 0.9rem;
        color: #6c757d;
    }

    .blog-hotel-tag {
        display: inline-block;
        background: #0071c2;
        color: #fff;
        padding: 0.25rem 0.75rem;
        border-radius: 0.5rem;
        font-size: 0.85rem;
        font-weight: 600;
        margin-top: 0.5rem;
    }
</style>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold"><i class="bi bi-journal-text"></i> Blog của tôi</h2>
        <a asp-action="Create" class="btn btn-primary">
            <i class="bi bi-plus-circle"></i> Tạo bài viết mới
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            <i class="bi bi-info-circle fs-3"></i>
            <p class="mt-2 mb-0">Bạn chưa có bài viết nào. Hãy tạo bài viết đầu tiên!</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var blog in Model)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card blog-card h-100">
                        <img src="@(blog.Thumbnail ?? "/Image/blogs/default.jpg")" 
                             class="blog-thumbnail" alt="@blog.Title" />
                        <div class="card-body">
                            <h5 class="blog-title">@blog.Title</h5>
                            
                            @if (blog.HotelId.HasValue && blog.Hotel != null)
                            {
                                <span class="blog-hotel-tag">
                                    <i class="bi bi-building"></i> @blog.Hotel.Name
                                </span>
                            }

                            <p class="blog-meta mt-2">
                                <i class="bi bi-calendar"></i> @blog.CreatedDate.ToString("dd/MM/yyyy")
                            </p>

                            @if (!string.IsNullOrEmpty(blog.ShortDescription))
                            {
                                <p class="text-muted">@blog.ShortDescription</p>
                            }

                            <div class="d-flex gap-2 mt-3">
                                <a asp-action="Detail" asp-route-id="@blog.BlogId" 
                                   class="btn btn-sm btn-outline-primary flex-fill">
                                    <i class="bi bi-eye"></i> Xem
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>
