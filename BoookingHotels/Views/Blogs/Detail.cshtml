@using System.Security.Claims
@model BoookingHotels.Models.Blog
@{
    ViewData["Title"] = "Chi tiết Blog";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    .blog-detail-card {
        border: none;
        border-radius: 1rem;
        overflow: hidden;
        box-shadow: 0 4px 20px rgba(0,0,0,0.08);
        background: #fff;
    }

        .blog-detail-card img {
            max-height: 400px;
            object-fit: cover;
            width: 100%;
        }

    .blog-detail-title {
        font-weight: 800;
        font-size: 2rem;
        color: #003580;
        margin-bottom: 1rem;
    }

    .blog-meta {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 1.5rem;
    }

        .blog-meta i {
            color: #febb02;
            margin-right: 0.3rem;
        }

    .blog-content {
        font-size: 1.05rem;
        line-height: 1.7;
        color: #444;
    }

    .blog-author {
        display: flex;
        align-items: center;
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #eee;
    }

        .blog-author img {
            border-radius: 50%;
            margin-right: 0.75rem;
        }

    .hotel-info-card {
        background: linear-gradient(135deg, #0071c2 0%, #003580 100%);
        color: #fff;
        border-radius: 1rem;
        padding: 1.5rem;
        margin-bottom: 1.5rem;
        box-shadow: 0 4px 16px rgba(0,113,194,0.2);
    }

    .hotel-info-card h5 {
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .hotel-info-card a {
        color: #febb02;
        text-decoration: none;
        font-weight: 600;
    }

    .hotel-info-card a:hover {
        text-decoration: underline;
    }

    .btn-back {
        margin-top: 2rem;
        border-radius: 0.5rem;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card blog-detail-card">
                <!-- Thumbnail -->
                <img src="@Model.Thumbnail" alt="@Model.Title" class="card-img-top" />

                <div class="card-body p-4">
                    <!-- Title -->
                    <h1 class="blog-detail-title">@Model.Title</h1>

                    <!-- Meta -->
                    <div class="blog-meta d-flex align-items-center">
                        <span class="me-3">
                            <i class="fa-regular fa-calendar"></i> @Model.CreatedDate.ToString("dd/MM/yyyy")
                        </span>
                        <span>
                            <i class="fa-solid fa-user-pen"></i> @Model.Author
                        </span>
                    </div>

                    <!-- Hotel Info Card -->
                    @if (Model.HotelId.HasValue && Model.Hotel != null)
                    {
                        <div class="hotel-info-card">
                            <h5><i class="fa-solid fa-hotel"></i> Khách sạn được review</h5>
                            <p class="mb-2">
                                <strong>@Model.Hotel.Name</strong><br/>
                                <i class="fa-solid fa-location-dot"></i> @Model.Hotel.Address, @Model.Hotel.City
                            </p>
                            <a asp-controller="Hotels" asp-action="Details" asp-route-id="@Model.HotelId">
                                <i class="fa-solid fa-arrow-right"></i> Xem chi tiết khách sạn
                            </a>
                        </div>
                    }

                    <!-- Content -->
                    <div class="blog-content">
                        @Html.Raw(Model.Content?.Replace("\n", "<br/>"))
                    </div>

                    <!-- Author -->
                    <div class="blog-author">
                        <img src="/Image/avatar-admin.png" alt="@Model.Author" width="45" height="45" />
                        <div>
                            <div class="fw-semibold">@Model.Author</div>
                            <div class="text-muted small">Tác giả bài viết</div>
                        </div>
                    </div>

                    <!-- Back button -->
                    <a asp-action="Index" class="btn btn-outline-primary btn-back px-4">
                        <i class="fa-solid fa-arrow-left"></i> Quay lại danh sách
                    </a>
                    @if ((User.Identity?.IsAuthenticated ?? false) && (Model.ReviewerId == int.Parse(User.FindFirst(ClaimTypes.NameIdentifier)?.Value ?? "0") || User.IsInRole("Admin")))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.BlogId" class="btn btn-warning btn-back px-4 ms-2">
                            <i class="fa-solid fa-pen-to-square"></i> Chỉnh sửa
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
