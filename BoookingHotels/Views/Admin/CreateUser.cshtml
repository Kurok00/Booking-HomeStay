@model BoookingHotels.Models.User

@{
    ViewData["Title"] = "Tạo Người Dùng Mới";
}

<div class="container py-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0">
                <div class="card-header bg-gradient text-white py-3">
                    <h3 class="mb-0">
                        <i class="bi bi-person-plus-fill me-2"></i> Tạo Người Dùng Mới
                    </h3>
                </div>
                <div class="card-body p-4">
                    <form asp-action="CreateUser" method="post" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-3" role="alert"></div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="UserName" class="form-label fw-bold">
                                        <i class="bi bi-person-badge text-primary"></i> Tên đăng nhập 
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="UserName" class="form-control form-control-lg" 
                                           placeholder="Nhập tên đăng nhập" required />
                                    <span asp-validation-for="UserName" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="FullName" class="form-label fw-bold">
                                        <i class="bi bi-card-heading text-info"></i> Họ và tên
                                    </label>
                                    <input asp-for="FullName" class="form-control form-control-lg" 
                                           placeholder="Nhập họ và tên đầy đủ" />
                                    <span asp-validation-for="FullName" class="text-danger small"></span>
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Email" class="form-label fw-bold">
                                        <i class="bi bi-envelope text-danger"></i> Email 
                                        <span class="text-danger">*</span>
                                    </label>
                                    <input asp-for="Email" type="email" class="form-control form-control-lg" 
                                           placeholder="example@email.com" required />
                                    <span asp-validation-for="Email" class="text-danger small"></span>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="mb-3">
                                    <label asp-for="Phone" class="form-label fw-bold">
                                        <i class="bi bi-telephone text-success"></i> Số điện thoại
                                    </label>
                                    <input asp-for="Phone" type="tel" class="form-control form-control-lg" 
                                           placeholder="0912345678" pattern="[0-9]{10,11}" />
                                    <span asp-validation-for="Phone" class="text-danger small"></span>
                                    <small class="form-text text-muted">VD: 0912345678</small>
                                </div>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label asp-for="Password" class="form-label fw-bold">
                                <i class="bi bi-shield-lock text-warning"></i> Mật khẩu 
                                <span class="text-danger">*</span>
                            </label>
                            <div class="input-group input-group-lg">
                                <input asp-for="Password" type="password" class="form-control" 
                                       placeholder="Nhập mật khẩu" id="passwordInput" required />
                                <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                    <i class="bi bi-eye" id="toggleIcon"></i>
                                </button>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle"></i> Tối thiểu 6 ký tự, nên có chữ hoa, chữ thường và số
                            </small>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-image text-secondary"></i> Ảnh đại diện
                            </label>
                            
                            <!-- Tab Navigation -->
                            <ul class="nav nav-tabs mb-3" id="avatarTab" role="tablist">
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link active" id="upload-tab" data-bs-toggle="tab" 
                                            data-bs-target="#upload" type="button" role="tab">
                                        <i class="bi bi-upload"></i> Tải ảnh lên
                                    </button>
                                </li>
                                <li class="nav-item" role="presentation">
                                    <button class="nav-link" id="url-tab" data-bs-toggle="tab" 
                                            data-bs-target="#url" type="button" role="tab">
                                        <i class="bi bi-link-45deg"></i> Nhập URL
                                    </button>
                                </li>
                            </ul>

                            <!-- Tab Content -->
                            <div class="tab-content" id="avatarTabContent">
                                <!-- Upload Tab -->
                                <div class="tab-pane fade show active" id="upload" role="tabpanel">
                                    <div class="card border-secondary">
                                        <div class="card-body text-center p-4">
                                            <div class="mb-3">
                                                <img id="avatarPreview" src="/Image/default-avatar.svg" 
                                                     class="rounded-circle mb-3" 
                                                     style="width: 150px; height: 150px; object-fit: cover; border: 3px solid #dee2e6;"
                                                     onerror="this.src='/Image/default-avatar.svg'" />
                                            </div>
                                            <input type="file" name="avatarFile" id="avatarFile" 
                                                   class="form-control" accept="image/*" />
                                            <small class="form-text text-muted mt-2 d-block">
                                                <i class="bi bi-info-circle"></i> Chọn ảnh JPG, PNG hoặc GIF (tối đa 5MB)
                                            </small>
                                        </div>
                                    </div>
                                </div>

                                <!-- URL Tab -->
                                <div class="tab-pane fade" id="url" role="tabpanel">
                                    <div class="card border-secondary">
                                        <div class="card-body p-3">
                                            <input asp-for="AvatarUrl" class="form-control" id="avatarUrlInput"
                                                   placeholder="https://example.com/avatar.jpg" />
                                            <span asp-validation-for="AvatarUrl" class="text-danger small"></span>
                                            <small class="form-text text-muted mt-2 d-block">
                                                Nhập đường dẫn URL đến ảnh đại diện
                                            </small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="mb-4">
                            <label class="form-label fw-bold">
                                <i class="bi bi-shield-check text-primary"></i> Phân quyền 
                                <span class="text-danger">*</span>
                            </label>
                            <div class="card border-primary">
                                <div class="card-body p-3">
                                    @if (ViewBag.Roles != null)
                                    {
                                        <div class="row">
                                            @foreach (var role in ViewBag.Roles)
                                            {
                                                <div class="col-md-6 mb-2">
                                                    <div class="form-check form-switch">
                                                        <input class="form-check-input" type="checkbox" 
                                                               name="selectedRoles" value="@role.RoleId" 
                                                               id="role_@role.RoleId" style="width: 3em; height: 1.5em;">
                                                        <label class="form-check-label ms-2 fw-semibold" for="role_@role.RoleId">
                                                            @if (role.RoleName == "Admin")
                                                            {
                                                                <i class="bi bi-person-fill-gear text-danger"></i> <span>Quản trị viên</span>
                                                            }
                                                            else if (role.RoleName == "Host")
                                                            {
                                                                <i class="bi bi-house-fill text-info"></i> <span>Chủ nhà</span>
                                                            }
                                                            else if (role.RoleName == "User")
                                                            {
                                                                <i class="bi bi-person-fill text-success"></i> <span>Người dùng</span>
                                                            }
                                                            else
                                                            {
                                                                <span>@role.RoleName</span>
                                                            }
                                                        </label>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                </div>
                            </div>
                            <small class="form-text text-muted">
                                <i class="bi bi-info-circle"></i> Chọn ít nhất một vai trò cho người dùng
                            </small>
                        </div>

                        <div class="mb-4">
                            <div class="card border-success">
                                <div class="card-body p-3">
                                    <div class="form-check form-switch">
                                        <input asp-for="Status" type="checkbox" class="form-check-input" 
                                               id="statusCheck" checked style="width: 3em; height: 1.5em;" />
                                        <label class="form-check-label ms-2 fw-bold" for="statusCheck">
                                            <i class="bi bi-toggle-on text-success"></i> Kích hoạt tài khoản ngay
                                        </label>
                                    </div>
                                    <small class="text-muted ms-5 ps-1">
                                        Bật để người dùng có thể đăng nhập ngay lập tức
                                    </small>
                                </div>
                            </div>
                        </div>

                        <div class="d-flex justify-content-between gap-2 mt-4">
                            <a asp-action="Users" class="btn btn-secondary btn-lg px-4">
                                <i class="bi bi-arrow-left"></i> Quay lại
                            </a>
                            <button type="submit" class="btn btn-success btn-lg px-4">
                                <i class="bi bi-check-circle"></i> Tạo người dùng
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bg-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 0.2rem rgba(102, 126, 234, 0.25);
    }

    .form-check-input:checked {
        background-color: #667eea;
        border-color: #667eea;
    }

    .card {
        border-radius: 1rem;
        overflow: hidden;
    }

    .form-control-lg {
        border-radius: 0.5rem;
    }
</style>

<script>
    // Toggle password visibility
    document.getElementById('togglePassword').addEventListener('click', function() {
        const passwordInput = document.getElementById('passwordInput');
        const toggleIcon = document.getElementById('toggleIcon');
        
        if (passwordInput.type === 'password') {
            passwordInput.type = 'text';
            toggleIcon.classList.remove('bi-eye');
            toggleIcon.classList.add('bi-eye-slash');
        } else {
            passwordInput.type = 'password';
            toggleIcon.classList.remove('bi-eye-slash');
            toggleIcon.classList.add('bi-eye');
        }
    });

    // Preview avatar image
    document.getElementById('avatarFile').addEventListener('change', function(e) {
        const file = e.target.files[0];
        if (file) {
            // Check file size (5MB max)
            if (file.size > 5 * 1024 * 1024) {
                alert('Kích thước file quá lớn! Vui lòng chọn ảnh dưới 5MB.');
                this.value = '';
                return;
            }

            // Check file type
            if (!file.type.startsWith('image/')) {
                alert('Vui lòng chọn file ảnh!');
                this.value = '';
                return;
            }

            const reader = new FileReader();
            reader.onload = function(e) {
                document.getElementById('avatarPreview').src = e.target.result;
            }
            reader.readAsDataURL(file);
        }
    });

    // Preview avatar from URL
    document.getElementById('avatarUrlInput').addEventListener('input', function(e) {
        const url = e.target.value;
        if (url) {
            const img = new Image();
            img.onload = function() {
                document.getElementById('avatarPreview').src = url;
            }
            img.onerror = function() {
                document.getElementById('avatarPreview').src = '/Image/default-avatar.svg';
            }
            img.src = url;
        }
    });
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
