<div class="container-fluid px-0" style="overflow-x: hidden;">
<div class="hotel-details-container" style="max-width: 1200px; margin: 0 auto; padding: 20px; box-sizing: border-box;">
    <!-- Hero Section with Main Image -->
    <div class="hero-section">
        <img src="@mainPhoto" alt="@Model.Name" class="hero-image">
        <div class="hero-overlay">
            <h1 class="hero-title">@Model.Name</h1>
            <div class="hero-location">
                <i class="bi bi-geo-alt-fill"></i>
                @Model.Address, @Model.City, @Model.Country
            </div>
        </div>
    </div>

    <!-- Photo Gallery Grid -->
    @if (hotelPhotos.Count > 1)
    {
        <div class="photo-gallery">
            <div class="gallery-main gallery-item">
                <img src="@hotelPhotos[0].Url" alt="Hotel main view">
            </div>
            @for (int i = 1; i < Math.Min(hotelPhotos.Count, 5); i++)
            {
                <div class="gallery-item">
                    <img src="@hotelPhotos[i].Url" alt="Hotel view @(i + 1)">
                    @if (i == 4 && hotelPhotos.Count > 5)
                    {
                        <div class="more-photos-overlay">
                            +@(hotelPhotos.Count - 4) ảnh khác
                        </div>
                    }
                </div>
            }
        </div>
    }

    <!-- Main Content Grid -->
    <div class="content-grid">
        <!-- Hotel Information -->
        <div class="hotel-info">
            <h2 class="section-title">Mô tả khách sạn</h2>
            <div class="description-text">
                @Model.Description
            </div>

            <!-- Rooms Section -->
            <div class="rooms-section">
                <h2 class="section-title">Phòng có sẵn</h2>
                <div class="room-grid">
                    @foreach (var room in Model.Rooms)
                    {
                        var roomPhoto = room.Photos?.FirstOrDefault()?.Url ?? "https://images.unsplash.com/photo-1631049307264-da0ec9d70304?w=400";
                        <div class="room-card">
                            <div class="room-image">
                                <img src="@roomPhoto" alt="@room.Name">
                            </div>
                            <div class="room-content">
                                <h3 class="room-name">@room.Name</h3>
                                <div class="room-specs">
                                    <div class="room-spec">
                                        <i class="bi bi-people-fill"></i>
                                        @room.Capacity người
                                    </div>
                                    <div class="room-spec">
                                        <i class="bi bi-moon-fill"></i>
                                        @room.BedType
                                    </div>
                                    <div class="room-spec">
                                        <i class="bi bi-arrows-fullscreen"></i>
                                        @room.Size m²
                                    </div>
                                </div>
                                @if (room.RoomAmenities?.Any() == true)
                                {
                                    <div class="room-amenities">
                                        @foreach (var amenity in room.RoomAmenities.Where(ra => ra.Amenity != null).Select(ra => ra.Amenity))
                                        {
                                            <span class="amenity-tag">@amenity.Name</span>
                                        }
                                    </div>
                                }
                                <div class="room-footer">
                                    <div class="room-price-section">
                                        <span class="room-price">@room.Price.ToString("N0") ₫</span>
                                        <div class="room-price-unit">/đêm</div>
                                    </div>
                                    <div class="room-buttons-group">
                                        <a asp-controller="Bookings"
                                           asp-action="Create"
                                           asp-route-roomId="@room.RoomId"
                                           class="room-book-btn">
                                            Đặt ngay
                                        </a>
                                        <a asp-controller="Rooms"
                                           asp-action="Details"
                                           asp-route-id="@room.RoomId"
                                           class="room-detail-btn">
                                            Chi tiết
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Booking Sidebar -->
        <div class="booking-card">
            <div class="price-display">
                <div class="price-from">Giá từ</div>
                @if (Model.Rooms?.Any() == true)
                {
                    var minPrice = Model.Rooms.Min(r => r.Price);
                    <div class="price-amount">@minPrice.ToString("N0") ₫</div>
                }
                else
                {
                    <div class="price-amount">Liên hệ</div>
                }
                <div class="price-unit">mỗi đêm</div>
            </div>
            
            @if (Model.Rooms?.Any() == true)
            {
                <a asp-controller="Bookings"
                   asp-action="Create"
                   asp-route-roomId="@Model.Rooms.First().RoomId"
                   class="cta-button">
                    Đặt phòng ngay
                </a>
            }

            <!-- Amenities in Sidebar -->
            @{
                var uniqueAmenities = Model.Rooms?
                    .Where(r => r.RoomAmenities != null && r.RoomAmenities.Any())
                    .SelectMany(r => r.RoomAmenities!)
                    .Where(ra => ra.Amenity != null)
                    .Select(ra => ra.Amenity!)
                    .DistinctBy(a => a.AmenityId)
                    .OrderBy(a => a.Name)
                    .ToList();
            }
            
            @if (uniqueAmenities?.Any() == true)
            {
                <div class="sidebar-amenities">
                    <h3 class="sidebar-amenities-title">
                        <i class="bi bi-star-fill"></i> Tiện nghi
                    </h3>
                    <div class="sidebar-amenities-grid">
                        @foreach (var amenity in uniqueAmenities.Take(8))
                        {
                            <div class="sidebar-amenity-card">
                                <i class="sidebar-amenity-icon @(!string.IsNullOrEmpty(amenity.Icon) ? amenity.Icon : "bi-check-circle")"></i>
                                <span class="sidebar-amenity-name">@amenity.Name</span>
                            </div>
                        }
                    </div>
                    @if (uniqueAmenities.Count > 8)
                    {
                        <div class="sidebar-amenity-more">
                            <i class="bi bi-plus-circle"></i> @(uniqueAmenities.Count - 8) tiện nghi khác
                        </div>
                    }
                </div>
            }

            <div style="margin-top: 20px; padding-top: 20px; border-top: 1px solid #eee; font-size: 14px; color: #666; text-align: center;">
                <i class="bi bi-shield-check"></i> Đặt phòng an toàn & bảo mật
            </div>
        </div>
    </div>
</div>
    <!-- Map Section -->
    <!-- Reviews Section -->
    <div style="margin-top: 40px;">
        <h2 class="section-title">
            <i class="bi bi-star-fill" style="color: #FFD700;"></i> 
            Đánh giá từ khách hàng
        </h2>
        
        @{
            var allReviews = Model.Rooms?
                .SelectMany(r => r.Reviews ?? Enumerable.Empty<BoookingHotels.Models.Review>())
                .Where(r => r.IsVisible)
                .OrderByDescending(r => r.CreatedAt)
                .ToList() ?? new List<BoookingHotels.Models.Review>();
            
            var averageRating = allReviews.Any() ? allReviews.Average(r => r.Rating) : 0;
            var totalReviews = allReviews.Count;
        }

        @if (totalReviews > 0)
        {
            <!-- Rating Summary -->
            <div style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); padding: 30px; border-radius: 12px; color: white; margin-bottom: 30px; box-shadow: 0 8px 24px rgba(102, 126, 234, 0.3);">
                <div class="row align-items-center">
                    <div class="col-md-4 text-center">
                        <div style="font-size: 4rem; font-weight: 700; line-height: 1;">
                            @averageRating.ToString("0.0")
                        </div>
                        <div style="font-size: 1.2rem; margin-top: 8px;">
                            @for (int i = 1; i <= 5; i++)
                            {
                                if (i <= Math.Round(averageRating))
                                {
                                    <i class="bi bi-star-fill" style="color: #FFD700;"></i>
                                }
                                else
                                {
                                    <i class="bi bi-star" style="color: rgba(255,255,255,0.5);"></i>
                                }
                            }
                        </div>
                        <div style="margin-top: 8px; opacity: 0.9;">
                            @totalReviews đánh giá
                        </div>
                    </div>
                    <div class="col-md-8">
                        @for (int star = 5; star >= 1; star--)
                        {
                            var starCount = allReviews.Count(r => r.Rating == star);
                            var percentage = totalReviews > 0 ? (starCount * 100.0 / totalReviews) : 0;
                            
                            <div class="d-flex align-items-center mb-2">
                                <div style="width: 60px;">@star <i class="bi bi-star-fill" style="color: #FFD700; font-size: 0.9rem;"></i></div>
                                <div class="flex-grow-1 mx-3">
                                    <div style="background: rgba(255,255,255,0.2); height: 8px; border-radius: 4px; overflow: hidden;">
                                        <div style="background: #FFD700; height: 100%; width: @percentage%;"></div>
                                    </div>
                                </div>
                                <div style="width: 60px; text-align: right;">@starCount</div>
                            </div>
                        }
                    </div>
                </div>
            </div>

            <!-- Reviews List -->
            <div class="reviews-container">
                @foreach (var review in allReviews.Take(10))
                {
                    <div class="review-card" style="background: white; padding: 24px; border-radius: 12px; margin-bottom: 20px; box-shadow: 0 2px 12px rgba(0,0,0,0.08); transition: transform 0.2s ease, box-shadow 0.2s ease;">
                        <div class="d-flex align-items-start gap-3">
                            <!-- User Avatar -->
                            <div style="flex-shrink: 0;">
                                <div style="width: 50px; height: 50px; border-radius: 50%; background: linear-gradient(135deg, #667eea, #764ba2); display: flex; align-items: center; justify-content: center; color: white; font-weight: 700; font-size: 1.3rem;">
                                    @(review.User?.FullName?.Substring(0, 1).ToUpper() ?? "?")
                                </div>
                            </div>
                            
                            <!-- Review Content -->
                            <div class="flex-grow-1">
                                <!-- User Info & Rating -->
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <div>
                                        <h5 style="margin: 0; font-weight: 600; color: #2d3a4a;">
                                            @(review.User?.FullName ?? "Ẩn danh")
                                        </h5>
                                        <small style="color: #6c757d;">
                                            <i class="bi bi-clock"></i> @review.CreatedAt.ToString("dd/MM/yyyy HH:mm")
                                        </small>
                                    </div>
                                    <div style="display: flex; gap: 2px;">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            if (i <= review.Rating)
                                            {
                                                <i class="bi bi-star-fill" style="color: #FFD700; font-size: 1.1rem;"></i>
                                            }
                                            else
                                            {
                                                <i class="bi bi-star" style="color: #ddd; font-size: 1.1rem;"></i>
                                            }
                                        }
                                    </div>
                                </div>

                                <!-- Room Info -->
                                @if (review.Room != null)
                                {
                                    <div style="background: #f8f9fa; padding: 8px 12px; border-radius: 6px; display: inline-block; margin-bottom: 12px;">
                                        <i class="bi bi-door-open"></i> 
                                        <small>@review.Room.Name</small>
                                    </div>
                                }

                                <!-- Review Text -->
                                @if (!string.IsNullOrEmpty(review.Comment))
                                {
                                    <p style="margin: 12px 0; line-height: 1.6; color: #495057;">
                                        @review.Comment
                                    </p>
                                }
                            </div>
                        </div>
                    </div>
                }

                @if (totalReviews > 10)
                {
                    <div class="text-center mt-4">
                        <button class="btn btn-outline-primary btn-lg" onclick="alert('Tính năng xem thêm đang được phát triển')">
                            <i class="bi bi-chevron-down"></i> Xem thêm @(totalReviews - 10) đánh giá
                        </button>
                    </div>
                }
            </div>
        }
        else
        {
            <div style="background: #f8f9fa; padding: 60px 20px; border-radius: 12px; text-align: center;">
                <i class="bi bi-chat-left-text" style="font-size: 4rem; color: #ccc;"></i>
                <h4 style="margin-top: 20px; color: #6c757d;">Chưa có đánh giá nào</h4>
                <p style="color: #999;">Hãy là người đầu tiên đánh giá khách sạn này!</p>
            </div>
        }
    </div>

    <div style="margin-top: 40px;">
        <h2 class="section-title">Vị trí khách sạn</h2>
        <div id="hotelMap" style="height: 400px; border-radius: 12px; overflow: hidden; box-shadow: 0 4px 20px rgba(0,0,0,0.1);"></div>
    </div>
</div>

<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
         var lat = @(Model.Latitude.HasValue? Model.Latitude.Value.ToString("F6", System.Globalization.CultureInfo.InvariantCulture) : "10.762622");
    var lng = @(Model.Longitude.HasValue? Model.Longitude.Value.ToString("F6", System.Globalization.CultureInfo.InvariantCulture) : "106.660172");

        var map = L.map('hotelMap').setView([lat, lng], 15);

        L.tileLayer('https://{s}.tile.openstreetmap.org/{z}/{x}/{y}.png', {
            attribution: '&copy; OpenStreetMap contributors'
        }).addTo(map);

        var marker = L.marker([lat, lng]).addTo(map)
            .bindPopup("<b>@Model.Name</b><br>@Model.Address")
            .openPopup();
    });

    // Gallery image click handler
    document.querySelectorAll('.gallery-item img').forEach(img => {
        img.addEventListener('click', function() {
            // Simple lightbox effect - you can enhance this
            const modal = document.createElement('div');
            modal.style.cssText = `
                position: fixed;
                top: 0;
                left: 0;
                width: 100%;
                height: 100%;
                background: rgba(0,0,0,0.9);
                display: flex;
                align-items: center;
                justify-content: center;
                z-index: 10000;
                cursor: pointer;
            `;
            
            const modalImg = document.createElement('img');
            modalImg.src = this.src;
            modalImg.style.cssText = `
                max-width: 90%;
                max-height: 90%;
                object-fit: contain;
                border-radius: 8px;
            `;
            
            modal.appendChild(modalImg);
            document.body.appendChild(modal);
            
            modal.addEventListener('click', () => {
                document.body.removeChild(modal);
            });
        });
    });
</script>

</div>
