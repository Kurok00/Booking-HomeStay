        max-width: calc(50% - 10px);
        display: flex;
        flex-direction: column;
    }

    .room-card:hover {
        transform: translateY(-4px);
        box-shadow: 0 12px 32px rgba(0,0,0,0.15);
    }

    .room-image {
        height: 200px;
        position: relative;
        overflow: hidden;
    }

    .room-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.3s ease;
    }

    .room-card:hover .room-image img {
        transform: scale(1.05);
    }

    .room-content {
        padding: 20px;
        flex: 1;
        display: flex;
        flex-direction: column;
    }

    .room-name {
        font-size: 1.2rem;
        font-weight: 600;
        color: #1a1a1a;
        margin-bottom: 8px;
    }

    .room-specs {
        display: flex;
        flex-wrap: wrap;
        gap: 12px;
        margin-bottom: 12px;
        font-size: 14px;
        color: #666;
    }

    .room-spec {
        display: flex;
        align-items: center;
        gap: 4px;
    }

    .room-amenities {
        margin-bottom: 16px;
    }

    .amenity-tag {
        display: inline-block;
        background: #e8f4f8;
        color: #2c5aa0;
        padding: 4px 8px;
        border-radius: 12px;
        font-size: 12px;
        font-weight: 500;
        margin: 2px 4px 2px 0;
    }

    .room-footer {
        display: flex;
        align-items: flex-end;
        justify-content: space-between;
        padding-top: 16px;
        border-top: 1px solid #f0f0f0;
