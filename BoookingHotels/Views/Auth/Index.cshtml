<script>
    // Destination Dropdown Functionality
    document.addEventListener('DOMContentLoaded', function() {
        const destinationInput = document.getElementById('destinationInput');
        const destinationDropdown = document.getElementById('destinationDropdown');
        const destinationItems = document.querySelectorAll('.destination-item-dropdown');

        // Function to position dropdown
        function positionDropdown() {
            const rect = destinationInput.getBoundingClientRect();
            destinationDropdown.style.top = (rect.bottom + 5) + 'px';
            destinationDropdown.style.left = rect.left + 'px';
            destinationDropdown.style.width = rect.width + 'px';
        }

        // Show dropdown when input is focused or clicked
        destinationInput.addEventListener('focus', function() {
            positionDropdown();
            destinationDropdown.style.display = 'block';
        });

        destinationInput.addEventListener('click', function() {
            positionDropdown();
            destinationDropdown.style.display = 'block';
        });

        // Reposition on scroll or resize
        window.addEventListener('scroll', function() {
            if (destinationDropdown.style.display === 'block') {
                positionDropdown();
            }
        });

        window.addEventListener('resize', function() {
            if (destinationDropdown.style.display === 'block') {
                positionDropdown();
            }
        });

        // Filter destinations based on input
        destinationInput.addEventListener('input', function() {
            const searchTerm = this.value.toLowerCase();
            let hasResults = false;

            destinationItems.forEach(item => {
                const cityName = item.getAttribute('data-city').toLowerCase();
                if (cityName.includes(searchTerm) || searchTerm === '') {
                    item.style.display = 'flex';
                    hasResults = true;
                } else {
                    item.style.display = 'none';
                }
            });

            // Show/hide dropdown based on results
            if (hasResults) {
                positionDropdown();
                destinationDropdown.style.display = 'block';
            } else {
                destinationDropdown.style.display = 'none';
            }
        });

        // Handle destination selection
        destinationItems.forEach(item => {
            item.addEventListener('click', function() {
                const cityName = this.getAttribute('data-city');
                destinationInput.value = cityName;
                destinationDropdown.style.display = 'none';
            });
        });

        // Close dropdown when clicking outside
        document.addEventListener('click', function(event) {
            const isClickInside = destinationInput.contains(event.target) || 
                                destinationDropdown.contains(event.target);
            
            if (!isClickInside) {
                destinationDropdown.style.display = 'none';
            }
        });

        // Prevent dropdown from closing when clicking inside it
        destinationDropdown.addEventListener('click', function(event) {
            event.stopPropagation();
        });

        // Handle keyboard navigation
        destinationInput.addEventListener('keydown', function(event) {
            const visibleItems = Array.from(destinationItems).filter(item => item.style.display !== 'none');
            
            if (event.key === 'ArrowDown' && visibleItems.length > 0) {
                event.preventDefault();
                visibleItems[0].focus();
            } else if (event.key === 'Escape') {
                destinationDropdown.style.display = 'none';
            }
        });

        // Add keyboard navigation for dropdown items
        destinationItems.forEach((item, index) => {
            item.setAttribute('tabindex', '0');
            
            item.addEventListener('keydown', function(event) {
                const visibleItems = Array.from(destinationItems).filter(item => item.style.display !== 'none');
                const currentIndex = visibleItems.indexOf(this);
                
                if (event.key === 'ArrowDown' && currentIndex < visibleItems.length - 1) {
                    event.preventDefault();
                    visibleItems[currentIndex + 1].focus();
                } else if (event.key === 'ArrowUp') {
                    event.preventDefault();
                    if (currentIndex > 0) {
                        visibleItems[currentIndex - 1].focus();
                    } else {
                        destinationInput.focus();
                    }
                } else if (event.key === 'Enter') {
                    event.preventDefault();
                    this.click();
                } else if (event.key === 'Escape') {
                    destinationDropdown.style.display = 'none';
                    destinationInput.focus();
                }
            });
        });
    });
</script>
