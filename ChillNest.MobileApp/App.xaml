<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:ChillNest.MobileApp"
             xmlns:converters="clr-namespace:ChillNest.MobileApp.Converters"
             x:Class="ChillNest.MobileApp.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Converters -->
            <converters:StringNotEmptyConverter x:Key="StringNotEmptyConverter"/>
            <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
            <converters:IsNotNullConverter x:Key="IsNotNullConverter"/>
            <converters:IntToBoolConverter x:Key="IntToBoolConverter"/>
            <converters:GreaterThanZeroConverter x:Key="GreaterThanZeroConverter"/>
            <converters:EditButtonTextConverter x:Key="EditButtonTextConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
